{
  "compilerOptions": {
    "target": "es5", // 최종적으로 컴파일할 결과물의 문법 형태를 지정합니다.
    "module": "esnext", // 모듈을 위한 코드 생성 설정입니다.
    "jsx": "react-jsx", // JSX 코드 생성 설정입니다.
    "moduleResolution": "node", // 모듈 해석 방법입니다.
    "include": ["src"], // 설정을 적용할 상위 폴더입니다.
    "lib": ["dom", "dom.iterable", "esnext"], // 사용할 수 있는 특정 기능에 대한 문법을 추가합니다.
    "strict": true, // 엄격한 타입 체크 여부입니다.
    "noImplicitAny": true, // any 타입이 의도치 않게 발생하는 경우 알림을 주기 위합니다.
    "allowJs": false, // js 파일을 허용할지 여부입니다.
    "esModuleInterop": true, // CommonJS와 ES Modules 간의 상호 운용성이 생기게할 지 여부
    "forceConsistentCasingInFileNames": true, // 같은 파일에 대한 일관되지 않은 참조를 허용하지 않을 지 여부입니다.
    "isolatedModules": true // 각 파일을 분리된 모듈로 변경할지 여부입니다.
  }
}
